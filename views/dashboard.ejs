<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div class="bg-color-primary">
        <h2 class="bg-primary text-white text-center py-5">Painel de Administração</h2>
    </div>
    <div class="container mt-5 py-2 bg-color-primary">
        <!-- Link para cadastrar um novo filme -->
        <a href="/add-filme" class="btn btn-success">Cadastrar Novo Filme</a>
        <br/><br/>
        
        <!-- Link para visualizar todos os filmes -->
        <a href="/filmes" class="btn btn-info">Visualizar Filmes Cadastrados</a>
        <br><br>
        <h3>Usuários Cadastrados</h3>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Gênero Favorito</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id_usuario %></td>
                    <td><%= user.nome %></td>
                    <td><%= user.email %></td>
                    <td><%= user.genero_fav %></td>
                    <td>
                        <a href="/edit/<%= user.id_usuario %>" class="btn btn-warning">Editar</a>
                        <form action="/delete/<%= user.id_usuario %>" method="post" style="display: inline;" onsubmit="return confirmDelete()">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <br/>
        <a href="/logout" class="btn btn-secondary">Logout</a>
    </div>

    <footer class="bg-color-primary py-5">
    </footer>
    <script src="/js/scriptDel.js"></script>
</body>
</html>
